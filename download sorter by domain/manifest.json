{
    "manifest_version": 3,
    "name": "Downloads Organizer by Domain Name",
    "version": "1.0",
    "description": "Save files in a folder according to the domain name.",
    "permissions": ["activeTab", "downloads", "storage", "scripting"],
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html"
    }
}